{
  "api_url": {
    "type": "string",
    "description": "NewsNow API 地址",
    "hint": "部署 NewsNow 的 Docker 地址，例如 http://192.168.124.8:12444。必填，不填无法使用。",
    "default": ""
  },
  "whitelist": {
    "type": "list",
    "description": "群组白名单 (必填)",
    "hint": "⚠️ 注意：如果此列表为空，插件将不会响应任何群聊消息！请填入允许使用的群号。",
    "default": []
  },
  "user_whitelist": {
    "type": "list",
    "description": "用户白名单",
    "hint": "填入允许使用的用户QQ号。如果留空，则默认允许所有用户使用。",
    "default": []
  },
  "user_blacklist": {
    "type": "list",
    "description": "用户黑名单",
    "hint": "填入禁止使用的用户QQ号。优先级高于白名单，在黑名单中的用户将被拒绝响应。",
    "default": []
  },
  "sources": {
    "type": "list",
    "description": "启用的新闻源",
    "hint": "允许查询的新闻源列表，不在列表中的源将被拒绝。",
    "default": [
      "zhihu", "weibo", "36kr", "ithome", "baidu", "bilibili",
      "douyin", "tieba", "toutiao", "thepaper", "sspai", "coolapk",
      "juejin", "tencent", "wallstreetcn", "cankaoxiaoxi", "hupu",
      "v2ex", "acfun", "jianshu", "ifeng", "kaopu", "solidot",
      "zaobao", "steam", "xueqiu", "jin10", "gelonghui", "linuxdo",
      "ghxi", "hellogithub", "honkai", "starrail", "peopledaily"
    ]
  }
}